{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Total Inactivated User</h1>
    <code>GET /api/customize/domain/inactivated_user</code>
</div>

<p class="lead">回傳廳指定時間後未登入總會員數</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <div class="template">
                <label class="control-label col-md-3">domain</label>
                <div class="col-md-5">
                    <input name="domain" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">廳主id</span>
            </div>
            <label class="control-label col-md-3">date</label>
            <div class="col-md-5">
                <input name="date" type="text" class="form-control" value="{{ "now"|date("Y-m-d\\TH:i:sO") }}">
            </div>
            <span class="help-block col-md-4">登入時間。ISO-8601格式</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_get_domain_inactivated_user" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
