{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Unlock Bitcoin Withdraw Entry</h1>
    <code>PUT /api/bitcoin_withdraw/entry/{entryId}/unlocked</code>
</div>

<p class="lead">解鎖比特幣出款明細</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-addon">/api/bitcoin_withdraw/entry/</span>
                    <input data-request-param="entryId" type="text" class="form-control" placeholder="{entryId}">
                    <span class="input-group-addon">/unlocked</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{entryId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">operator</label>
            <div class="col-md-5">
                <input name="operator" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">操作者</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">control</label>
            <div class="col-md-5">
                <input name="control" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">控端操作, 1:控端, 0:管端</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">force</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="force" type="text" class="form-control" value="0" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">是否強制解除鎖定。預設0</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_bitcoin_withdraw_unlocked" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
