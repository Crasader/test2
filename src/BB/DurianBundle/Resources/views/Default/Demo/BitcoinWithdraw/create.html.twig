{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Bitcoin Withdraw Entry</h1>
    <code>POST /user/{userId}/bitcoin_withdraw</code>
</div>

<div class="row">
    <div class="col-md-3">
        <p class="lead">新增比特幣出款記錄</p>
    </div>
</div>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/user/</span>
                    <input data-request-param="userId" type="text" class="form-control" placeholder="{userId}">
                    <span class="input-group-addon">/bitcoin_withdraw</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{userId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">currency</label>
            <div class="col-md-5">
                <input name="currency" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">取款幣別</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">amount</label>
            <div class="col-md-5">
                <input name="amount" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">取款金額</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">bitcoin_amount</label>
            <div class="col-md-5">
                <input name="bitcoin_amount" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">比特幣出款金額</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">bitcoin_rate</label>
            <div class="col-md-5">
                <input name="bitcoin_rate" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">比特幣匯率</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">rate_difference</label>
            <div class="col-md-5">
                <input name="rate_difference" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">比特幣匯差</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">ip</label>
            <div class="col-md-5">
                <input name="ip" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">出款者IP</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">withdraw_address</label>
            <div class="col-md-5">
                <input name="withdraw_address" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">比特幣出款位址</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">deduction</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="deduction" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">優惠扣除額。預設0</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">audit_fee</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="audit_fee" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">常態稽核手續費。預設0</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">audit_charge</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="audit_charge" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">常態稽核行政費用。預設0</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">memo</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="memo" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">備註。預設空字串</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_user_bitcoin_withdraw" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
