{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Auto Confirm Entry</h1>
    <code>POST /api/remit_account/{account}/auto_confirm_entry</code>
</div>

<p class="lead">新增匯款記錄</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="input-group col-md-7">
                <span class="input-group-addon">/api/remit_account/</span>
                <input data-request-param="account" type="text" class="form-control" placeholder="{account}">
                <span class="input-group-addon">/auto_confirm_entry</span>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{account}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">login_code</label>
            <div class="col-md-5">
                <input name="login_code" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">後置碼</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">data</label>
            <div class="col-md-5">
                <input name="data" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">匯款資料</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">balance</label>
            <div class="col-md-5">
                <input name="balance" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">餘額</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_create_remit_account_auto_confirm_entry" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
