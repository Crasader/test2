{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Put Auto Confirm Entry</h1>
    <code>PUT /api/auto_confirm/entry/{autoConfirmEntryId}</code>
</div>

<p class="lead">修改匯款記錄</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="input-group col-md-6">
                <span class="input-group-addon">/api/auto_confirm/entry/</span>
                <input data-request-param="autoConfirmEntryId" type="text" class="form-control" placeholder="{autoConfirmEntryId}">
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{autoConfirmEntryId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">memo</label>
            <div class="col-md-5">
                <input name="memo" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">備註</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_set_auto_confirm_entry" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
