{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Single Auto Confirm Entry</h1>
    <code>POST /api/remit_account/{account}/single_auto_confirm_entry</code>
</div>

<p class="lead">新增單一筆匯款記錄</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="input-group col-md-7">
                <span class="input-group-addon">/api/remit_account/</span>
                <input data-request-param="account" type="text" class="form-control" placeholder="{account}">
                <span class="input-group-addon">/single_auto_confirm_entry</span>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{account}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">ref_id</label>
            <div class="col-md-5">
                <input name="ref_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">外部訂單ID</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">login_code</label>
            <div class="col-md-5">
                <input name="login_code" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">後置碼</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">amount</label>
            <div class="col-md-5">
                <input name="amount" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">匯款金額</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">fee</label>
            <div class="col-md-5">
                <input name="fee" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">匯款手續費</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">balance</label>
            <div class="col-md-5">
                <input name="balance" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">匯款餘額</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">account</label>
            <div class="col-md-5">
                <input name="account" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">匯款卡號</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">name</label>
            <div class="col-md-5">
                <input name="name" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">匯款人姓名</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">time</label>
            <div class="col-md-5">
                <input name="time" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">匯款時間</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">memo</label>
            <div class="col-md-5">
                <input name="memo" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">匯款附言</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">message</label>
            <div class="col-md-5">
                <input name="message" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">收支信息</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">method</label>
            <div class="col-md-5">
                <input name="method" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">匯款方式</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_create_remit_account_single_auto_confirm_entry" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
