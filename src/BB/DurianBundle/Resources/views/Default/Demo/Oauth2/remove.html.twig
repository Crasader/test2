{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Remove Oauth2 Client</h1>
    <code>DELETE /api/oauth2/client/{clientId}</code>
</div>

<p class="lead">刪除 Oauth2 client</p>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/oauth2/client/</span>
                    <input data-request-param="clientId" type="text" class="form-control" placeholder="{clientId}" />
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入ClientId{clientId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">redirect_uri</label>
            <div class="col-md-5">
                <input name="redirect_uri" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">導向網址</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">domain</label>
            <div class="col-md-5">
                <input name="domain" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳主id</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_oauth2_remove" data-request-type="DELETE" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
