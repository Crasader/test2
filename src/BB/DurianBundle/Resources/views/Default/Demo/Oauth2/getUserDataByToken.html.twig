{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get User Data By Token</h1>
    <code>GET /api/oauth2/user_by_token</code>
</div>

<p class="lead">利用存取碼取得使用者資訊</p>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">token</label>
            <div class="col-md-5">
                <input name="token" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">client_id</label>
            <div class="col-md-5">
                <input name="client_id" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_oauth2_get_user_by_token" data-request-type="GET" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
