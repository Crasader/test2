{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Oauth2 Client</h1>
    <code>POST /api/oauth2/client</code>
</div>

<p class="lead">建立 Oauth2 client</p>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">name</label>
            <div class="col-md-5">
                <input name="name" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">名稱</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">redirect_uri</label>
            <div class="col-md-5">
                <input name="redirect_uri" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">導向網址</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">domain</label>
            <div class="col-md-5">
                <input name="domain" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳主id</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_oauth2_create" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
