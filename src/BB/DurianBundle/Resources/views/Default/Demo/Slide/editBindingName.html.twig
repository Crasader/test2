{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Edit Binding Name</h1>
    <code>PUT /api/slide/binding/name</code>
</div>

<div class="row">
    <div class="col-md-7">
        <p class="lead">修改裝置綁定名稱</p>
        <p></p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">user_id</label>
            <div class="col-md-5">
                <input name="user_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">使用者ID</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">app_id</label>
            <div class="col-md-5">
                <input name="app_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">裝置識別ID</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">device_name</label>
            <div class="col-md-5">
                <input name="device_name" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">裝置名稱</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_edit_binding_name" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
