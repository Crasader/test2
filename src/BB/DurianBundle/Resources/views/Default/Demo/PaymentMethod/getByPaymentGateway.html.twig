{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get PaymentMethod By PaymentGateway</h1>
    <code>GET /api/payment_gateway/{paymentGatewayId}/payment_method</code>
</div>

<p class="lead">回傳支付平台設定的付款方式</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">/api/payment_gateway/</span>
                    <input data-request-param="paymentGatewayId" type="text" class="form-control" placeholder="{paymentGatewayId}">
                    <span class="input-group-addon">/payment_method</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{paymentGatewayId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_payment_gateway_get_payment_method" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
