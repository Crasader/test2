{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Set PaymentCharge Name</h1>
    <code>PUT /api/payment_charge/{id}/name</code>
</div>

<p class="lead">修改線上支付設定名稱</p>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/payment_charge/</span>
                    <input data-request-param="id" type="text" class="form-control" placeholder="{id}">
                    <span class="input-group-addon">/name</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{id}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">name</label>
            <div class="col-md-5">
                <input name="name" type="text" class="form-control" value="">
            </div>
            <span class="help-block col-md-4">名稱</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_payment_charge_name" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
