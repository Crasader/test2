{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Set PaymentGateway Fee</h1>
    <code>PUT /api/payment_charge/{id}/payment_gateway/fee</code>
</div>

<p class="lead">修改線上支付設定的支付平台手續費</p>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-addon">/api/payment_charge/</span>
                    <input data-request-param="id" type="text" class="form-control" placeholder="{id}">
                    <span class="input-group-addon">/payment_gateway/fee</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{id}</p>
        </div>
        <div>
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="checkbox">data[0]</label>
                <div class="form-group">
                    <label class="control-label col-md-3">[payment_gateway_id]</label>
                    <div class="col-md-5">
                        <input name="data[0][payment_gateway_id]" type="text" class="form-control">
                    </div>
                    <span class="help-block col-md-4">PaymentGateway ID</span>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">[rate]</label>
                    <div class="col-md-5">
                        <input name="data[0][rate]" type="text" class="form-control">
                    </div>
                    <span class="help-block col-md-4">%, 費率</span>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">[withdraw_rate]</label>
                    <div class="col-md-5">
                        <input name="data[0][withdraw_rate]" type="text" class="form-control">
                    </div>
                    <span class="help-block col-md-4">%, 出款費率</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_payment_gateway_fee" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
