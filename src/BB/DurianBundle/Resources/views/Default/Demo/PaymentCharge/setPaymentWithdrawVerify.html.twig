{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Payment Withdraw Verify</h1>
    <code>PUT /api/payment_charge/{id}/withdraw_verify</code>
</div>

<p class="lead">修改線上支付設定的取款審核</p>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-addon">/api/payment_charge/</span>
                    <input data-request-param="id" type="text" class="form-control" placeholder="{id}">
                    <span class="input-group-addon">/withdraw_verify</span>
                </div>
            </div>
            <button data-request-routing="api_get_payment_withdraw_verify" class="btn btn-default" type="button" id="load-btn">Load</button>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{id}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">need_verify</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="need_verify" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">是否需要審核</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">verify_time</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="verify_time" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">審核所需時數</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">verify_amount</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="verify_amount" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">審核金額</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_payment_charge_withdraw_verify" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
