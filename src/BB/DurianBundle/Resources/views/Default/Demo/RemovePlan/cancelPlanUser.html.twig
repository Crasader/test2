{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Cancel Plan User</h1>
    <code>PUT /api/remove_plan/{planId}/user/cancel</code>
</div>

<p class="lead">撤銷刪除使用者</p>
<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/remove_plan/</span>
                    <input data-request-param="planId" type="text" class="form-control" placeholder="{planId}">
                    <span class="input-group-addon">/user/cancel</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{planId}</p>
        </div>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="control-label col-md-3">users[]</label>
                <div class="col-md-5">
                    <input name="users[]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">使用者ID</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_cancel_remove_plan_user" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
