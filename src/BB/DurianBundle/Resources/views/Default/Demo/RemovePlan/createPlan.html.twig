{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Remove Plan</h1>
    <code>POST /api/remove_plan</code>
</div>
<p class="lead">新增刪除使用者計畫</p>
<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">parent_id</label>
            <div class="col-md-5">
                <input name="parent_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">上層ID</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">depth</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="depth" type="text" class="form-control" value="1" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">要刪除的帳號與上層相差的層數。預設不限</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">created_at</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="created_at" type="text" class="form-control" value="{{ "now"|date("Y-m-d\\TH:i:sO") }}" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">使用者建立時間。ISO-8601格式</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">last_login</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="last_login" type="text" class="form-control" value="{{ "now"|date("Y-m-d\\TH:i:sO") }}" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">使用者最後登入時間。ISO-8601格式</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">title</label>
            <div class="col-md-5">
                <input name="title" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">名稱</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">creator</label>
            <div class="col-md-5">
                <input name="creator" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">建立者</span>
        </div>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="control-label col-md-3">level_id[]</label>
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <input class="action-enable" type="checkbox">
                        </span>
                        <input name="level_id[]" type="text" class="form-control" disabled>
                    </div>
                </div>
                <span class="help-block col-md-4">會員層級</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_create_remove_plan" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
