{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Check Plan Finish By Plan User</h1>
    <code>GET /api/remove_plan/check_finish</code>
</div>

<p class="lead">依計畫使用者檢查刪除計畫是否完成</p>
<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">plan_user_id</label>
            <div class="col-md-5">
                <input name="plan_user_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">刪除計畫使用者ID</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_check_plan_finish_by_plan_user" data-request-type="GET" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
