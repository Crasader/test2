{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Transcribe Entry Rank</h1>
    <code>PUT /api/transcribe/entry/{entryId}/rank</code>
</div>

<p class="lead">調整人工抄錄明細順序</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/transcribe/entry/</span>
                    <input data-request-param="entryId" type="text" class="form-control" placeholder="{entryId}">
                </div>
            </div>
            <button id="load-btn" data-request-routing="api_get_transcribe_entry" class="btn btn-default" type="button">Load</button>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{entryId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">rank</label>
            <div class="col-md-5">
                <input name="rank" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">排序</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_set_transcribe_rank" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
