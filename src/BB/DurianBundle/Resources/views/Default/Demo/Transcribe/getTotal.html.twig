{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Transcribe Entry Total</h1>
    <code>GET /api/transcribe/total</code>
</div>

<p class="lead">取得時間點前的人工抄錄明細金額總合</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">account_id</label>
            <div class="col-md-5">
                <input name="account_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">出入款帳號id</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">end_at</label>
            <div class="col-md-5">
                <input name="end_at" type="text" class="form-control" value="{{ "now"|date("Y-m-d\\TH:i:sO") }}">
            </div>
            <span class="help-block col-md-4">搜尋區間,迄。ISO8601格式</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_get_transcribe_total" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
