{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Remit Transcribe Entry</h1>
    <code>POST /api/transcribe/entry</code>
</div>

<p class="lead">新增人工抄錄明細</p>
<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">account_id</label>
            <div class="col-md-5">
                <input name="account_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">出入款帳號id</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">rank</label>
            <div class="col-md-5">
                <input name="rank" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">排序</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_create_transcribe_entry" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
