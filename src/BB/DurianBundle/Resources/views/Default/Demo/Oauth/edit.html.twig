{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Edit Setting</h1>
    <code>PUT /api/oauth/{oauthId}</code>
</div>

<p class="lead">修改Oauth設定</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/oauth/</span>
                    <input data-request-param="oauthId" type="text" class="form-control" placeholder="{oauthId}">
                </div>
            </div>
            <button id="load-btn" data-request-routing="api_oauth_get_by_id" class="btn btn-default" type="button">Load</button>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{oauthId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">vendor_id</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="vendor_id" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">oauth廠商id, 1: 微博, 2: qq, 3: facebook</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">app_id</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="app_id" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">廳在oauth廠商所申請的識別id</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">app_key</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="app_key" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">廳在oauth廠商所申請的密鑰</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">redirect_url</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="redirect_url" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">重導向網址</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_oauth_edit" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
