{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Oauth Setting</h1>
    <code>POST /api/oauth</code>
</div>

<p class="lead">新增Oauth設定</p>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">vendor_id</label>
            <div class="col-md-5">
                <input name="vendor_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">oauth廠商id, 1: 微博, 2: qq, 3: facebook</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">domain</label>
            <div class="col-md-5">
                <input name="domain" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">app_id</label>
            <div class="col-md-5">
                <input name="app_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳在oauth廠商所申請的識別id</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">app_key</label>
            <div class="col-md-5">
                <input name="app_key" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳在oauth廠商所申請的密鑰</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">redirect_url</label>
            <div class="col-md-5">
                <input name="redirect_url" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">重導向網址</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_oauth_create" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
