{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Oauth User Profile</h1>
    <code>GET /api/oauth/user_profile</code>
</div>

<p class="lead">取得Oauth帳號資料</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">oauth_id</label>
            <div class="col-md-5">
                <input name="oauth_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">oauth設定id</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">code</label>
            <div class="col-md-5">
                <input name="code" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">authorization code</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_oauth_get_user_profile" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
