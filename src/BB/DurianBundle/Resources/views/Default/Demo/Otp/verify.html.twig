{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Otp</h1>
    <code>GET /api/otp/verify</code>
</div>

<div class="row">
    <div class="col-md-7">
        <p class="lead">取得 otp 驗證結果</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">username</label>
            <div class="col-md-5">
                <input name="username" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">登入帳號</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">domain</label>
            <div class="col-md-5">
                <input name="domain" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">登入廳主ID</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">otp_token</label>
            <div class="col-md-5">
                <input name="otp_token" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳主OTP token</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_otp_verify" data-request-type="GET" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
