{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Edit Global Ip</h1>
    <code>PUT /api/global_ip</code>
</div>

<div class="row">
    <div class="col-md-7">
        <p class="lead">編輯全域IP備註</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">ip</label>
            <div class="col-md-5">
                <input name="ip" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">IP</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">memo</label>
            <div class="col-md-5">
                <input name="memo" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">備註</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_global_ip_edit" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
