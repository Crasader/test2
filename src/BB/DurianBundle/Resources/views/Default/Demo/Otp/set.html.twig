{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Otp</h1>
    <code>PUT /api/otp/set</code>
</div>

<p class="lead">設定 OTP 總開關</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">disable</label>
            <div class="col-md-5">
                <input name="disable" type="text" class="form-control" value="0">
            </div>
            <span class="help-block col-md-4">1為關閉OTP驗證，0為啟用OTP驗證，預設0</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_otp_set" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
