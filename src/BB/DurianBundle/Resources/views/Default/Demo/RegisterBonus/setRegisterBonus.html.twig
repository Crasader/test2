{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Register Bonus</h1>
    <code>PUT /api/user/{userId}/register_bonus</code>
</div>

<p class="lead">設定註冊優惠相關設定</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/user/</span>
                    <input data-request-param="userId" type="text" class="form-control" placeholder="{userId}">
                    <span class="input-group-addon">/register_bonus</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入會員id{userId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">amount</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="amount" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">優惠金額</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">multiply</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="multiply" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">優惠打碼倍倍數</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">refund_commision</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="refund_commision" type="text" class="form-control" disabled value="1">
                </div>
            </div>
            <span class="help-block col-md-4">是否寫入退傭費用</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_user_register_bonus" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}