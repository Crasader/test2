{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Exchange</h1>
    <code>GET /api/exchange/{exchangeId}</code>
</div>

<p class="lead">回傳匯率</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/exchange/</span>
                    <input data-request-param="exchangeId" type="text" class="form-control" value="" placeholder="{exchangeId}">
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">填入網址變數{exchangeId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_exchange_get" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
