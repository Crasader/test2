{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Exchange</h1>
    <code>POST /api/exchange</code>
</div>

<p class="lead">新增匯率</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">currency</label>
            <div class="col-md-5">
                <input id="currency" name="currency" type="text" class="form-control" value="CNY">
            </div>
            <span class="help-block col-md-4">幣別</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">active_at</label>
            <div class="col-md-5">
                <input name="active_at" type="text" class="form-control" value="{{ "now"|date("Y-m-d\\TH:i:sO") }}">
            </div>
            <span class="help-block col-md-4">生效時間。ISO-8601格式</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">buy</label>
            <div class="col-md-5">
                <input name="buy" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">買入匯率值</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">sell</label>
            <div class="col-md-5">
                <input name="sell" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">賣出匯率值</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">basic</label>
            <div class="col-md-5">
                <input name="basic" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">基本匯率值</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_exchange_create" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
