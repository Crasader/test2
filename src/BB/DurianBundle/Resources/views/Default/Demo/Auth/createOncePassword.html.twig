{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Once Password</h1>
    <code>PUT /api/user/{userId}/once_password</code>
</div>
<p class="lead">新增臨時密碼</p>
<div class="row">
    <div class="col-md-7">
        <p><code>臨時密碼時效為30分鐘</code></p>
        <p><code>若使用臨時密碼登入成功一次後即失效</code></p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/user/</span>
                    <input data-request-param="userId" type="text" class="form-control" placeholder="{userId}">
                    <span class="input-group-addon">/once_password</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入使用者編號{userId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">operator</label>
            <div class="col-md-6">
                <input name="operator" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">操作者</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_create_once_password" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
