{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Domain Set Outside Payway</h1>
    <code>PUT /api/domain/{domain}/outside/payway</code>
</div>

<p class="lead">設定Domain外接額度交易機制</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/domain/</span>
                    <input data-request-param="domain" type="text" class="form-control" placeholder="{domain}">
                    <span class="input-group-addon">/outside</paywayspan>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入廳主id{domain}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">bodog</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="bodog" type="text" class="form-control" disabled value="0">
                </div>
            </div>
            <span class="help-block col-md-4">博狗額度</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_domain_set_outside_payway" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
