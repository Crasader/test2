{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Domain Set Config</h1>
    <code>PUT /api/domain/{domain}/config</code>
</div>

<p class="lead">設定Domain相關設定</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/domain/</span>
                    <input data-request-param="domain" type="text" class="form-control" placeholder="{domain}">
                    <span class="input-group-addon">/config</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入廳主id{domain}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">block_create_user</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="block_create_user" type="text" class="form-control" disabled value="0">
                </div>
            </div>
            <span class="help-block col-md-4">阻擋新增使用者。預設不阻擋</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">block_login</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="block_login" type="text" class="form-control" disabled value="0">
                </div>
            </div>
            <span class="help-block col-md-4">阻擋登入。預設不阻擋</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">block_test_user</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="block_test_user" type="text" class="form-control" disabled value="1">
                </div>
            </div>
            <span class="help-block col-md-4">阻擋測試帳號。預設阻擋</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">login_code</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="login_code" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">登入代碼</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">name</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="name" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">廳名</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">verfiy_otp</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="verify_otp" type="text" class="form-control" disabled value="0">
                </div>
            </div>
            <span class="help-block col-md-4">驗證OTP。預設不驗證</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_domain_set_config" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
