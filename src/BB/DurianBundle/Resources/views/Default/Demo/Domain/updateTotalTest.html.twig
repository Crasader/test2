{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Update Domain Total Test</h1>
    <code>PUT /api/domain/{domain}/total_test</code>
</div>

<p class="lead">更新廳下層會員的測試帳號數量</p>
<div class="alert alert-info">公司測試帳號不列入計算</div>
<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/domain/</span>
                    <input data-request-param="domain" type="text" class="form-control" placeholder="{domain}">
                    <span class="input-group-addon">/total_test</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入廳主id{domain}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_domain_update_total_test" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
