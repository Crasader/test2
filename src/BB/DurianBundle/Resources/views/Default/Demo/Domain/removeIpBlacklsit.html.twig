{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Remove Ip Blacklist</h1>
    <code>DELETE /api/domain/ip_blacklist</code>
</div>

<p class="lead">刪除IP封鎖列表</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <div class="template">
                <label class="control-label col-md-3">blacklist_id</label>
                <div class="col-md-5">
                    <input name="blacklist_id" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">IP封鎖列表id</span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">operator</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="operator" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">操作者</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_remove_ip_blacklist" data-request-type="DELETE" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
