{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get BankInfo By AutoRemit</h1>
    <code>GET /api/auto_remit/{autoRemitId}/bank_info</code>
</div>

<p class="lead">回傳自動認款平台支援的銀行</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">/api/auto_remit/</span>
                    <input data-request-param="autoRemitId" type="text" class="form-control" placeholder="{autoRemitId}">
                    <span class="input-group-addon">/bank_info</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{autoRemitId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_auto_remit_get_bank_info" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
