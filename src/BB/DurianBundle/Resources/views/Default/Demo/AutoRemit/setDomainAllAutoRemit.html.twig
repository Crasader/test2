{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Domain All Auto Remit </h1>
    <code>PUT /api/domain/{domain}/auto_remit</code>
</div>

<p class="lead">修改廳的自動認款平台設定</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/domain/</span>
                    <input data-request-param="domain" type="text" class="form-control" placeholder="{domain}">
                    <span class="input-group-addon">/auto_remit</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">網址變數{domain}輸入廳</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">enable</label>
            <div class="col-md-5">
                <input name="enable" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">是否啟用</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_domain_all_auto_remit" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
