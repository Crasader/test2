{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Remove DomainAutoRemit</h1>
    <code>DELETE /api/domain/{domain}/auto_remit/{autoRemitId}</code>
</div>

<p class="lead">刪除自動認款平台廳的設定</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/domain/</span>
                    <input data-request-param="domain" type="text" class="form-control" placeholder="{domain}">
                    <span class="input-group-addon">/auto_remit/</span>
                    <input data-request-param="autoRemitId" type="text" class="form-control" placeholder="{autoRemitId}">
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">網址變數{domain}輸入廳、{autoRemitId}輸入自動認款平台ID</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_remove_domain_auto_remit" data-request-type="DELETE" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
