{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set DomainAutoRemit</h1>
    <code>PUT /api/domain/{domain}/auto_remit/{autoRemitId}</code>
</div>

<p class="lead">修改自動認款平台廳的設定</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/domain/</span>
                    <input data-request-param="domain" type="text" class="form-control" placeholder="{domain}">
                    <span class="input-group-addon">/auto_remit/</span>
                    <input data-request-param="autoRemitId" type="text" class="form-control" placeholder="{autoRemitId}">
                </div>
            </div>
            <button id="load-btn" data-request-routing="api_get_domain_auto_remit" class="btn btn-default" type="button">Load</button>
            <p class="help-block col-md-offset-2 col-md-10">網址變數{domain}輸入廳、{autoRemitId}輸入自動認款平台ID</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">enable</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="enable" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">是否啟用</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">api_key</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="api_key" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">api 密鑰</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_domain_auto_remit" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
