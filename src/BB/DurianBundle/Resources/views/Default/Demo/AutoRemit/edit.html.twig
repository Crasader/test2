{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Edit AutoRemit</h1>
    <code>PUT /api/auto_remit/{autoRemitId}</code>
</div>

<p class="lead">修改自動認款平台</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/auto_remit/</span>
                    <input data-request-param="autoRemitId" type="text" class="form-control" placeholder="{autoRemitId}">
                </div>
            </div>
            <button id="load-btn" data-request-routing="api_get_auto_remit" class="btn btn-default" type="button">Load</button>
            <p class="help-block col-md-offset-2 col-md-10">網址變數{autoRemitId}輸入自動認款平台id</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">label</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="label" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">自動認款平台Class的名稱</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">name</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="name" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">自動認款平台名稱</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_edit_auto_remit" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
