{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Abnormal Deposit Notify Email</h1>
    <code>POST /api/deposit/abnormal_notify_email</code>
</div>

<p class="lead">新增異常入款提醒email</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">email</label>
            <div class="col-md-5">
                <input name="email" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">email</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_create_deposit_abnormal_notify_email" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
