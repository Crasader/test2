{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Card Deposit Confirm</h1>
    <code>PUT /api/card/deposit/{entryId}/confirm</code>
</div>

<p class="lead">租卡確認入款</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-addon">/api/card/deposit/</span>
                    <input data-request-param="entryId" type="text" class="form-control" placeholder="{entryId}">
                    <span class="input-group-addon">/confirm</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{entryId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">manual</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="manual" type="text" class="form-control" value="0" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">人工存入，預設為0</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">operator_id</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="operator_id" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">操作者Id</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">operator_name</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="operator_name" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">操作者名稱，控端用。若有代入操作者Id，以操作者Id為主</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_card_deposit_confirm" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
