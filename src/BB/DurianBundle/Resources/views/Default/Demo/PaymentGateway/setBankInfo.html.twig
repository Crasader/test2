{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set PaymentGateway BankInfo</h1>
    <code>PUT /api/payment_gateway/{paymentGatewayId}/bank_info</code>
</div>

<p class="lead">設定支付平台的出款銀行</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/payment_gateway/</span>
                    <input data-request-param="paymentGatewayId" type="text" class="form-control" placeholder="{paymentGatewayId}">
                    <span class="input-group-addon">/bank_info</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{paymentGatewayId}</p>
        </div>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="control-label col-md-3">bank_info[]</label>
                <div class="col-md-5">
                    <input name="bank_info[]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">出款銀行ID</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_payment_gateway_bank_info" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
