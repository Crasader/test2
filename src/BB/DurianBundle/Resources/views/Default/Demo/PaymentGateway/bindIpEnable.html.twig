{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Enable PaymentGateway Bind IP</h1>
    <code>PUT /api/payment_gateway/{paymentGatewayId}/bind_ip_enable</code>
</div>

<p class="lead">啟用支付平台綁定IP機制</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/payment_gateway/</span>
                    <input data-request-param="paymentGatewayId" type="text" class="form-control" placeholder="{paymentGatewayId}">
                    <span class="input-group-addon">/bind_ip_enable</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">網址變數{paymentGatewayId}輸入支付平台id</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_payment_gateway_bind_ip_enable" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
