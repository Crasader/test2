{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>ValidateShareLimit</h1>
    <code>GET /api/validate_share_limit</code>
</div>

<p class="lead">檢查佔成</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">depth</label>
            <div class="col-md-5">
                <input id="depth" name="depth" type="text" class="form-control">
            </div>
            <span class="help_inline">階層</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">domain</label>
            <div class="col-md-5">
                <input id="domain" name="domain" type="text" class="form-control">
            </div>
            <span class="help_inline">廳主</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">disable</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="disable" type="text" class="form-control" value="1" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">是否驗證停用使用者</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">next</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="next" type="text" class="form-control" value="1" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">驗證預改佔成</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_validate_share_limit" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
