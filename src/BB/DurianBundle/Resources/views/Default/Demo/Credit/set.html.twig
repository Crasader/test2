{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Edit</h1>
    <code>PUT /api/user/{userId}/credit/{groupNum}</code>
</div>

<div class="row">
    <div class="col-md-7">
    <p class="lead">設定信用額度</p>
    </div>
    {% include 'BBDurianBundle:Default/Doc:credit_group.html.twig' %}
</div>
<div class="alert alert-info">
    設定額度最大值為<code>10000000000000000</code>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-addon">/api/user/</span>
                    <input data-request-param="userId" type="text" class="form-control" placeholder="{userId}">
                    <span class="input-group-addon">/credit/</span>
                    <input data-request-param="groupNum" type="text" class="form-control" placeholder="{groupNum}">
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{userId}, {groupNum}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">line</label>
            <div class="col-md-5">
                <input name="line" type="text" class="form-control" value="0">
            </div>
            <span class="help-block col-md-4">設定額度</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_credit_set" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
