{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Credit</h1>
    <code>POST /api/user/{userId}/credit/{groupNum}</code>
</div>

<div class="row">
    <div class="col-md-7">
    <p class="lead">新增使用者信用額度</p>
    </div>
    {% include 'BBDurianBundle:Default/Doc:credit_group.html.twig' %}
</div>
<div class="alert alert-info">
    信用額度上限為<code>10000000000000000</code>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-addon">/api/user/</span>
                    <input data-request-param="userId" type="text" class="form-control" placeholder="{userId}">
                    <span class="input-group-addon">/credit/</span>
                    <input data-request-param="groupNum" type="text" class="form-control" placeholder="{groupNum}">
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{userId}, {groupNum}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">balance</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="balance" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">信用額度上限</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_credit_create" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
