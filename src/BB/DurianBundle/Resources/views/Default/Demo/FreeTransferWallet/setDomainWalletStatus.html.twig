{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Domain Wallet Status</h1>
    <code>PUT /api/domain/{domain}/free_transfer_wallet/status</code>
</div>

<div class="row">
    <div class="col-md-7">
        <p class="lead">設定廳開放錢包狀態</p>
    </div>
    <div class="col-md-3">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>#</th><th>Wallet status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>0</td><td>只開放多錢包</td>
                </tr>
                <tr>
                    <td>1</td><td>只開放免轉錢包</td>
                </tr>
                <tr>
                    <td>2</td><td>會員自選</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/domain/</span>
                    <input data-request-param="domain" type="text" class="form-control" placeholder="{domain}">
                    <span class="input-group-addon">/free_transfer_wallet/status</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{domain}</p>
        </div>
        <div class="form-group">
            <div class="template">
                <label class="control-label col-md-3">wallet_status</label>
                <div class="col-md-5">
                    <input name="wallet_status" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">錢包狀態代碼</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_domain_wallet_status" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
