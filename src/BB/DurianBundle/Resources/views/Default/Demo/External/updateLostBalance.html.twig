{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Update External Lost Balance</h1>
    <code>PUT /api/transaction/{transId}/external/lost_balance</code>
</div>

<div class="row">
    <div class="col-md-6">
        <p class="lead">更新外接遊戲單筆額度遺失資料</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/transaction/</span>
                    <input data-request-param="transId" type="text" class="form-control" placeholder="{transId}">
                    <span class="input-group-addon">/external/lost_balance</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{transId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_update_external_lost_balance" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
