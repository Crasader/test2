{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>External Transfer</h1>
    <code>PUT /api/user/{userId}/external/transfer</code>
</div>

<div class="row">
    <div class="col-md-6">
        <p class="lead">外接遊戲轉移額度</p>
    </div>
    {% include 'BBDurianBundle:Default/Doc:external_game_map.html.twig' %}
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/user/</span>
                    <input data-request-param="userId" type="text" class="form-control" placeholder="{userId}">
                    <span class="input-group-addon">/external/transfer</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{userId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">source</label>
            <div class="col-md-5">
                <input name="source" type="text" class="form-control" value="1">
            </div>
            <span class="help-block col-md-4">來源遊戲平台編號</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">target</label>
            <div class="col-md-5">
                <input name="target" type="text" class="form-control" value="1">
            </div>
            <span class="help-block col-md-4">目標遊戲平台編號</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">amount</label>
            <div class="col-md-5">
                <input name="amount" type="text" class="form-control" value="0">
            </div>
            <span class="help-block col-md-4">轉帳金額 (須為正數)</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">operator</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="operator" type="text" class="form-control" value="" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">操作者。預設為空值</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">memo</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="memo" type="text" class="form-control" value="" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">備註。預設為空值</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">api_owner</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="api_owner" type="text" class="form-control" value="0" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">是否為API業主。預設0</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">copy_hierarchy</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="copy_hierarchy" type="text" class="form-control" value="0" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">複製體系使用。預設0</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_external_transfer" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
