{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get API Owner Transfer Status</h1>
    <code>GET /api/owner/external/transfer/status</code>
</div>

<div class="row">
    <div class="col-md-6">
        <p class="lead">回傳外接遊戲API業主外接交易結果</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">source_trans_id</label>
            <div class="col-md-5">
                <input name="source_trans_id" type="text" class="form-control" value="0">
            </div>
            <span class="help-block col-md-4">第一筆明細編號</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">target_trans_id</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="target_trans_id" type="text" class="form-control" value="0" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">第二筆明細編號</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">force</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="force" type="text" class="form-control" value="0" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">強制取得最新交易結果。預設為0</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_get_external_owner_transfer_status" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
