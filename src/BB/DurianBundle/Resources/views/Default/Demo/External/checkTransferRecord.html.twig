{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Check Transfer Record</h1>
    <code>PUT /api/transaction/{transId}/external/transfer_record</code>
</div>

<div class="row">
    <div class="col-md-6">
        <p class="lead">檢查成功交易資料</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/transaction/</span>
                    <input data-request-param="transId" type="text" class="form-control" placeholder="{transId}">
                    <span class="input-group-addon">/external/transfer_record</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{transId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">is_send</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="is_send" type="text" class="form-control" value="0" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">是否發送italking。預設為0</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_external_transfer_record" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
