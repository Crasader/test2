{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Withdraw Account Confirm</h1>
    <code>PUT /api/withdraw/{withdrawEntryId}/account_confirm</code>
</div>

<p class="lead">Account確認出款</p>
<div class="alert alert-info">Account出款明細不須鎖定，直接確認出款</div>
<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/withdraw/</span>
                    <input data-request-param="withdrawEntryId" type="text" class="form-control" placeholder="{withdrawEntryId}">
                    <span class="input-group-addon">/account_confirm</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{withdrawEntryId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">merchant_withdraw_id</label>
            <div class="col-md-5">
                <input name="merchant_withdraw_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-3">出款商家ID</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">checked_username</label>
            <div class="col-md-5">
                <input name="checked_username" type="text" class="form-control">
            </div>
            <span class="help-block col-md-3">操作者名稱</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_withdraw_account_confirm" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
