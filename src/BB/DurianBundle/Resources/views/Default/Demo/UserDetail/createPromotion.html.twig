{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Promotion</h1>
    <code>POST /api/user/{userId}/promotion</code>
</div>

<p class="lead">新增推廣資料</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/user/</span>
                    <input data-request-param="userId" type="text" placeholder="{userId}" class="form-control">
                    <span class="input-group-addon">/promotion</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入使用者編號{userId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">domain</label>
            <div class="col-md-6">
                <input name="domain" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳主id</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">url</label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="url" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">推廣網址</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">others</label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="others" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">其他推廣方式</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_create_promotion" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
