{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Merchant Level Order</h1>
    <code>PUT /api/level/{levelId}/merchant/order</code>
</div>

<p class="lead">設定層級內商家順序</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/level/</span>
                    <input data-request-param="levelId" type="text" class="form-control" placeholder="{levelId}">
                    <span class="input-group-addon">/merchant/order</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{levelId}</p>
        </div>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="checkbox">merchants[0]</label>
                <label class="control-label col-md-3">[merchant_id]</label>
                <div class="col-md-5">
                    <input name="merchants[0][merchant_id]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">商家ID</span>
                <label class="control-label col-md-3">[order_id]</label>
                <div class="col-md-5">
                    <input name="merchants[0][order_id]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">商家順序</span>
                <label class="control-label col-md-3">[version]</label>
                <div class="col-md-5">
                    <input name="merchants[0][version]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">版號</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_merchant_level_order" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
