{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Fetch UserIds By Username</h1>
    <code>GET /api/bulk/fetch_user_ids_by_username</code>
</div>

<p class="lead">根據廳與使用者帳號，回傳使用者id</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">domain</label>
            <div class="col-md-5">
                <input name="domain" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳主ID</span>
        </div>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="control-label col-md-3">username[]</label>
                <div class="col-md-5">
                    <input name="username[]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">使用者帳號</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_fetch_user_ids_by_username" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
