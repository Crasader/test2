{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Maintain By Game</h1>
    <code>GET /api/maintain/game/{code}</code>
</div>
<div class="row">
    <div class="col-md-7">
        <p class="lead">取得遊戲維護資訊</p>
    </div>
    {% include 'BBDurianBundle:Default/Doc:game_map.html.twig' %}
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    {% spaceless %}
                        <span class="input-group-addon">/api/maintain/game/</span>
                        <input data-request-param="code" type="text" class="form-control" placeholder="{code}">
                    {% endspaceless %}
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{code}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">client_ip</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="client_ip" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">操作者IP</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_get_maintain_by_game" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
