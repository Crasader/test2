{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Suspend Merchant</h1>
    <code>PUT /api/merchant/{merchantId}/suspend</code>
</div>

<p class="lead">暫停商家</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/merchant/</span>
                    <input data-request-param="merchantId" type="text" class="form-control" placeholder="{merchantId}">
                    <span class="input-group-addon">/suspend</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">網址變數{merchantId}輸入商家id</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_merchant_suspend" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
