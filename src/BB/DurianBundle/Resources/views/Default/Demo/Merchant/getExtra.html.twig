{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Merchant Extra</h1>
    <code>GET /api/merchant/{merchantId}/extra</code>
</div>

<p class="lead">回傳商家設定</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/merchant/</span>
                    <input data-request-param="merchantId" type="text" class="form-control" placeholder="{merchantId}">
                    <span class="input-group-addon">/extra</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{merchantId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">name</label>
            <div class="col-md-5">
                <input name="name" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">商家設定名稱</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_get_merchant_extra" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
