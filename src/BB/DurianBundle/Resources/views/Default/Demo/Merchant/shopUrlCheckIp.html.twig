{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>ShopUrl Check Ip</h1>
    <code>GET /api/merchant/shop_url/check_ip</code>
</div>

<div class="row">
    <div class="col-md-7">
        <p class="lead">檢查shopUrl的IP解析</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">domain</label>
            <div class="col-md-5">
                <input name="domain" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳主</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">shop_url</label>
            <div class="col-md-5">
                <input name="shop_url" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">購物車URL</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_merchant_shop_url_check_ip" data-request-type="GET" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
