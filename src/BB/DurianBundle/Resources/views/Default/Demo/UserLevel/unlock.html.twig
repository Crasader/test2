{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Unlock User Level</h1>
    <code>PUT /api/user_level/unlock</code>
</div>

<p class="lead">批次解鎖會員層級</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="control-label col-md-3">user_id[]</label>
                <div class="col-md-5">
                    <input name="user_id[]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">使用者ID</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_unlock_user_level" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
