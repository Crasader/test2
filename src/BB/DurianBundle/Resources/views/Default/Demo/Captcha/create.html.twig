{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Captcha</h1>
    <code>POST /api/user/{userId}/captcha</code>
</div>

<div class="row">
    <div class="col-md-5">
        <p class="lead">建立使用者 Captcha 資料</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">/api/user/</span>
                    <input data-request-param="userId" type="text" placeholder="{userId}" class="form-control">
                    <span class="input-group-addon">/captcha</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入使用者ID{userId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">identifier</label>
            <div class="col-md-4">
                <input name="identifier" type="text" class="form-control">
            </div>
            <span class="help-block col-md-5">識別符，限正整數，eg.cash_deposit_entry_id</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">length</label>
            <div class="col-md-4">
                <input name="length" type="text" class="form-control">
            </div>
            <span class="help-block col-md-5">長度，限正整數</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_captcha_create" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
