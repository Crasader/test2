{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get RemitAccount Qrcode</h1>
    <code>GET /api/remit_account/{remitAccountId}/qrcode</code>
</div>

<p class="lead">取得出入款帳號Qrcode</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/remit_account/</span>
                    <input data-request-param="remitAccountId" type="text" class="form-control" placeholder="{remitAccountId}">
                    <span class="input-group-addon">/qrcode</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">網址變數{remitAccountId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_get_remit_account_qrcode" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
