{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Remit Account Level</h1>
    <code>PUT /api/remit_account/{remitAccountId}/level</code>
</div>

<p class="lead">設定出入款帳號層級</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="input-group col-md-6">
                <span class="input-group-addon">/api/remit_account/</span>
                <input data-request-param="remitAccountId" type="text" class="form-control" placeholder="{remitAccountId}">
                <span class="input-group-addon">/level</span>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{remitAccountId}</p>
        </div>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="control-label col-md-3">level_id[0]</label>
                <div class="col-md-5">
                    <input name="level_id[0]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">層級ID</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_set_remit_account_level" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
