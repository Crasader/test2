{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get RemitAccount Stat</h1>
    <code>GET /api/remit_account/{remitAccountId}/stat</code>
</div>

<p class="lead">取得自動認款統計資料</p>

<form id="form" class="form-horizontal" role="form" enctype="multipart/form-data">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/remit_account/</span>
                    <input data-request-param="remitAccountId" type="text" class="form-control" placeholder="{remitAccountId}">
                    <span class="input-group-addon">/stat</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{remitAccountId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">at</label>
            <div class="col-md-5">
                <input name="at" type="text" class="form-control" value="{{ "now"|date("Y-m-d\\TH:i:sO") }}">
            </div>
            <span class="help-block col-md-4">日期</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_remit_account_get_stat" data-request-type="GET" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
