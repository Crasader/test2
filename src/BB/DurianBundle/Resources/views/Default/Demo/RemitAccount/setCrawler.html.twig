{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set RemitAccount Crawler</h1>
    <code>PUT /api/remit_account/{remitAccountId}/crawler</code>
</div>

<p class="lead">停/啟用爬蟲</p>

<form id="form" class="form-horizontal" role="form" enctype="multipart/form-data">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/remit_account/</span>
                    <input data-request-param="remitAccountId" type="text" class="form-control" placeholder="{remitAccountId}">
                    <span class="input-group-addon">/crawler</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{remitAccountId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">crawler_on</label>
            <div class="col-md-5">
                <input name="crawler_on" type="text" value="0" class="form-control">
            </div>
            <span class="help-block col-md-4">是否啟用爬蟲。預設 0:停用</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_remit_account_crawler" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
