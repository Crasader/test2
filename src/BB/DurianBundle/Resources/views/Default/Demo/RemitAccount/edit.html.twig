{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Edit Remit Account</h1>
    <code>PUT /api/remit_account/{remitAccountId}</code>
</div>

<p class="lead">修改出入款帳號</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/remit_account/</span>
                    <input data-request-param="remitAccountId" type="text" class="form-control" placeholder="{remitAccountId}">
                </div>
            </div>
            <button id="load-btn" class="btn btn-default" type="button" data-request-routing="api_remit_account_get">Load</button>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{remitAccountId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">domain</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="domain" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">廳</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">bank_info_id</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="bank_info_id" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">銀行ID</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">account</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="account" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">帳號</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">account_type</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="account_type" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">帳號類別。0 出款帳號，1 入款帳號</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">auto_remit_id</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="auto_remit_id" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">自動認款平台ID</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">auto_confirm</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="auto_confirm" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">自動確認。0 人工確認，1 自動確認</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">currency</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="currency" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">幣別</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">control_tips</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="control_tips" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">控端提示</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">recipient</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="recipient" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">收款人</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">message</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="message" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">會員端提示訊息</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">web_bank_account</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="web_bank_account" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">網銀登入帳號</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">web_bank_password</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="web_bank_password" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">網銀登入密碼</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">bank_limit</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="bank_limit" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">限額</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_edit_remit_account" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
