{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Merchant Withdraw Extra</h1>
    <code>GET /api/merchant/withdraw/{merchantWithdrawId}/extra</code>
</div>

<p class="lead">回傳出款商家設定</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/merchant/withdraw/</span>
                    <input data-request-param="merchantWithdrawId" type="text" class="form-control" placeholder="{merchantWithdrawId}">
                    <span class="input-group-addon">/extra</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{merchantWithdrawId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">name</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="name" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">出款商家設定名稱</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_get_merchant_withdraw_extra" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
