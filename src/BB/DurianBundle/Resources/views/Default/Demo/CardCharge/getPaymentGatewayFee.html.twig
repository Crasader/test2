{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}

<div class="page-header">
    <h1>Get Card PaymentGateway Fee</h1>
    <code>GET /api/card_charge/{cardChargeId}/payment_gateway/fee</code>
</div>

<p class="lead">取得租卡線上支付設定的支付平台手續費</p>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-addon">/api/card_charge/</span>
                    <input data-request-param="cardChargeId" type="text" class="form-control" placeholder="{cardChargeId}">
                    <span class="input-group-addon">/payment_gateway/fee</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{cardChargeId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_get_card_payment_gateway_fee" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
