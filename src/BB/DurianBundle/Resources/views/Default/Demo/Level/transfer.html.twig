{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Level Transfer</h1>
    <code>PUT /api/level/transfer</code>
</div>

<p class="lead">層級轉移</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="control-label col-md-3">source[]</label>
                <div class="col-md-5">
                    <input name="source[]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">來源層級Id</span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">target</label>
            <div class="col-md-5">
                <input name="target" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">目標層級Id</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_level_transfer" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
