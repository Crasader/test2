{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Add Level Url</h1>
    <code>POST /api/level_url</code>
</div>

<div class="row">
    <div class="col-md-7">
        <p class="lead">新增層級網址</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">level_id</label>
            <div class="col-md-5">
                <input name="level_id" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">層級id</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">url</label>
            <div class="col-md-5">
                <input name="url" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">層級網址</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">enable</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="enable" type="text" class="form-control" value="0" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">停啟用。預設停用</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_create_level_url" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
