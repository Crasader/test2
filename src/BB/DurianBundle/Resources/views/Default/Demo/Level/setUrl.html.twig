{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Level Url</h1>
    <code>PUT /api/level_url/{levelUrlId}</code>
</div>

<div class="row">
    <div class="col-md-7">
        <p class="lead">修改層級網址</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/level_url/</span>
                    <input data-request-param="levelUrlId" type="text" class="form-control" placeholder="{levelUrlId}">
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{levelUrlId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">url</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="url" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">網址</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">enable</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="enable" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">是否啟用</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_set_level_url" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
