{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Reward Entry</h1>
    <code>GET /api/reward/entry/{entryId}</code>
</div>

<div class="row">
    <div class="col-md-4">
        <p class="lead">取得單筆紅包明細資料</p>
    </div>
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/reward/entry/</span>
                    <input data-request-param="entryId" type="text" class="form-control" placeholder="{entryId}">
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入紅包明細id{entryId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_get_reward_entry" data-request-type="GET" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
