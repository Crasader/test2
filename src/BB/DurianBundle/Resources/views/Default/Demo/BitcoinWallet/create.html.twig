{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create Bitcoin Wallet</h1>
    <code>POST /api/domain/{domain}/bitcoin_wallet</code>
</div>

<div class="row">
    <div class="col-md-3">
        <p class="lead">新增廳的比特幣錢包</p>
    </div>
</div>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/domain/</span>
                    <input data-request-param="domain" type="text" class="form-control" placeholder="{domain}">
                    <span class="input-group-addon">/bitcoin_wallet</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{domain}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">wallet_code</label>
            <div class="col-md-5">
                <input name="wallet_code" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">比特幣錢包登入代碼</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">password</label>
            <div class="col-md-5">
                <input name="password" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">比特幣錢包密碼</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">second_password</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="second_password" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-3">比特幣錢包出款密碼</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">api_code</label>
            <div class="col-md-5">
                <input name="api_code" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">api密碼</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">xpub</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="xpub" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-3">比特幣出款公鑰</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">fee_per_byte</label>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input class="action-enable" type="checkbox">
                    </span>
                    <input name="fee_per_byte" type="text" class="form-control" disabled>
                </div>
            </div>
            <span class="help-block col-md-4">比特幣出款手續費率。預設0</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_create_domain_bitcoin_wallet" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
