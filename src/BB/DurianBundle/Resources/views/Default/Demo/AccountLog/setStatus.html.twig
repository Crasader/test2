{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set Account Log Status</h1>
    <code>PUT /api/account_log/{id}/status</code>
</div>

<div class="row">
    <div class="col-md-7">
        <p class="lead">設定AccountLog發送狀態</p>
    </div>
    {% include 'BBDurianBundle:Default/Doc:account_log_status.html.twig' %}
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/account_log/</span>
                    <input data-request-param="id" type="text" class="form-control" placeholder="{id}">
                    <span class="input-group-addon">/status</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{id}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">status</label>
            <div class="col-md-5">
                <input name="status" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">發送狀態</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_account_log_status" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
