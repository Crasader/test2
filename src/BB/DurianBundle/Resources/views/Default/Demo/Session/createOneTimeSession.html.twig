{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Create One-Time Session</h1>
    <code>POST /api/session/{sessionId}/ots</code>
</div>
<p class="lead">建立一次性Session (One-Time Session)</p>
<div class="alert alert-info">有效時間為 <code>1</code> 分鐘</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/session/</span>
                    <input data-request-param="sessionId" type="text" placeholder="{sessionId}" class="form-control">
                    <span class="input-group-addon">/ots</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入SessionId{sessionId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_session_create_ots" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
