{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get One-Time Session</h1>
    <code>GET /api/ots/{otsId}</code>
</div>
<p class="lead">透過 OTS 取得 Session id</p>
<div class="alert alert-info">取得後會 <code>立即</code> 刪除</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/ots/</span>
                    <input data-request-param="otsId" type="text" placeholder="{otsId}" class="form-control">
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入一次性Session Id{otsId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_session_get_ots" data-request-type="GET" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
