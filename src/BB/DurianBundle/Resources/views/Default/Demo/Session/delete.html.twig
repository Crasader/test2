{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Delete Session</h1>
    <code>DELETE /api/session/{sessionId}</code>
</div>
<p class="lead">刪除 Session 資料</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/session/</span>
                    <input data-request-param="sessionId" type="text" placeholder="{sessionId}" class="form-control">
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入 Session 編號{sessionId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_session_delete" data-request-type="DELETE" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
