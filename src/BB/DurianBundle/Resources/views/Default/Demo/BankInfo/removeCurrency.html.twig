{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Remove Currency</h1>
    <code>DELETE /api/bank_info/{bankInfoId}/currency/{currency}</code>
</div>

<p class="lead">移除銀行支援幣別</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-addon">/api/bank_info/</span>
                    <input data-request-param="bankInfoId" type="text" class="form-control" placeholder="{bankInfoId}">
                    <span class="input-group-addon">/currency</span>
                    <input data-request-param="currency" type="text" class="form-control" placeholder="{currency}">
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">填入網址變數{bankInfoId}銀行ID, {currency}幣別</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_bank_info_remove_currency" data-request-type="DELETE" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
