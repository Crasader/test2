{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Geoip Region</h1>
    <code>GET /api/geoip/country/{countryId}/region</code>
</div>

<p class="lead">依國家Id查詢區域列表</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/geoip/country/</span>
                    <input data-request-param="countryId" type="text" class="form-control" placeholder="{countryId}">
                    <span class="input-group-addon">/region/</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{countryId}取該國家的區域列表</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_geoip_region_list" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
