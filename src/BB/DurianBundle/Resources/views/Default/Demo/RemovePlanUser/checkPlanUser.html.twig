{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Check Remove Plan User</h1>
    <code>GET /api/remove_plan_user/{planUserId}/check</code>
</div>

<p class="lead">檢查刪除使用者名單是否符合刪除條件</p>
<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/remove_plan_user/</span>
                    <input data-request-param="planUserId" type="text" class="form-control" placeholder="{planUserId}">
                    <span class="input-group-addon">/check</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{planUserId}</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_check_remove_plan_user" data-request-type="GET" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}

