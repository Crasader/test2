{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Delete Domain Whitelist Ip</h1>
    <code>DELETE /api/ip_blocker/white_list/domain/{id}/ip</code>
</div>

<p class="lead">刪除廳IP地理位置白名單</p>

<div class="alert alert-warning">
    僅供RD5內部人員於刪除廳時使用
</div>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/ip_blocker/white_list/domain/</span>
                    <input data-request-param="id" type="text" placeholder="{id}" class="form-control">
                    <span class="input-group-addon">/ip</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入廳id{id}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">site</label>
            <div class="col-md-6">
                <input name="site" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">站別，1: 大球，2: 小球，3: 整合</span>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">operator</label>
            <div class="col-md-6">
                <input name="operator" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">操作者</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_delete_domain_whitelist_ip" data-request-type="DELETE" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
