{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Get Countries By Ip</h1>
    <code>GET /api/ip_blocker/geoip/countries_by_ip</code>
</div>

<p class="lead">根據ips取得國家資訊API</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="control-label col-md-3">ips[]</label>
                <div class="col-md-5">
                    <input name="ips[]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">ips</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button data-request-routing="api_get_countries_by_ip" data-request-type="GET" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}

