{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set MerchantCard Order</h1>
    <code>PUT /api/merchant_card/order</code>
</div>

<p class="lead">設定租卡商家排序</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-3">domain</label>
            <div class="col-md-5">
                <input name="domain" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">廳</span>
        </div>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="checkbox">merchant_cards[0]</label>
                <div class="form-group">
                    <label class="control-label col-md-3">[merchant_card_id]</label>
                    <div class="col-md-5">
                        <input name="merchant_cards[0][merchant_card_id]" type="text" class="form-control">
                    </div>
                    <span class="help-block col-md-4">租卡商家ID</span>
                    <label class="control-label col-md-3">[order_id]</label>
                    <div class="col-md-5">
                        <input name="merchant_cards[0][order_id]" type="text" class="form-control">
                    </div>
                    <span class="help-block col-md-4">租卡商家順序</span>
                    <label class="control-label col-md-3">[version]</label>
                    <div class="col-md-5">
                        <input name="merchant_cards[0][version]" type="text" class="form-control">
                    </div>
                    <span class="help-block col-md-4">版號</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_merchant_card_order" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
