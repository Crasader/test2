{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set MerchantCard Bank limit</h1>
    <code>POST /api/merchant_card/{merchantCardId}/bank_limit</code>
</div>

<p class="lead">設定租卡商家停用金額</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-addon">/api/merchant_card/</span>
                    <input data-request-param="merchantCardId" type="text" class="form-control" placeholder="{merchantCardId}">
                    <span class="input-group-addon">/bank_limit</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{merchantCardId}</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">value</label>
            <div class="col-md-5">
                <input name="value" type="text" class="form-control">
            </div>
            <span class="help-block col-md-4">停用金額設定值</span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_merchant_card_bank_limit" data-request-type="POST" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
