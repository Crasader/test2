{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set MerchantCard PaymentMethod</h1>
    <code>PUT /api/merchant_card/{merchantCardId}/payment_method</code>
</div>

<p class="lead">設定租卡商家的付款方式</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/merchant_card/</span>
                    <input data-request-param="merchantCardId" type="text" class="form-control" placeholder="{merchantCardId}">
                    <span class="input-group-addon">/payment_method</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{merchantCardId}</p>
        </div>
        <div>
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="control-group template">
                <label class="control-label col-md-3">payment_method[]</label>
                <div class="col-md-5">
                    <input name="payment_method[]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">付款方式ID</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_merchant_card_set_payment_method" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
