{% extends 'BBDurianBundle:Default/Demo:index.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Set MerchantCard Extra</h1>
    <code>PUT /api/merchant_card/{merchantCardId}/extra</code>
</div>

<p class="lead">設定租卡商家其他設定</p>

<form class="form-horizontal" role="form">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-addon">/api/merchant_card/</span>
                    <input data-request-param="merchantCardId" type="text" class="form-control" placeholder="{merchantCardId}">
                    <span class="input-group-addon">/extra</span>
                </div>
            </div>
            <p class="help-block col-md-offset-2 col-md-10">輸入網址變數{merchantCardId}</p>
        </div>
        <div class="form-group">
            <button class="btn btn-default action-more" type="button">複製參數</button>
            <div class="template">
                <label class="checkbox">merchant_card_extra[0]</label>
                <label class="control-label col-md-3">[name]</label>
                <div class="col-md-5">
                    <input name="merchant_card_extra[0][name]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">租卡商家設定名稱</span>
                <label class="control-label col-md-3">[value]</label>
                <div class="col-md-5">
                    <input name="merchant_card_extra[0][value]" type="text" class="form-control">
                </div>
                <span class="help-block col-md-4">租卡商家設定值</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button data-request-routing="api_set_merchant_card_extra" data-request-type="PUT" class="btn btn-primary" type="button" data-loading-text="loading...">Request</button>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}
