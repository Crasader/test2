#!/bin/sh

MAX=$1
BIN=$(cd $(dirname "$0"); pwd)

# 最大同時跑的數量預設為1個
if [ -z "$MAX" ]
then
    MAX=1
fi

if [ $MAX -gt "`ps aux | grep durian:level-transfer | grep console | grep -v grep | wc -l`" ]
then
    $BIN/../app/console durian:level-transfer --env=prod &
    usleep 200000
    $BIN/../app/console durian:level-transfer --env=prod &
fi
